<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="lifeEmulator" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.service.LifeEmulator" autowire="constructor"/>
    <bean id="employeeService" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.service.EmployeeService" autowire="byName"/>
    <bean id="positionService" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.service.PositionService" autowire="byType"/>
    <bean id="salaryService" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.service.SalaryService" autowire="byName"/>

    <bean id="founderWorker" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Employee" scope="prototype">
        <property name="position" ref="founder"/>
    </bean>
    <bean id="cookWorker" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Employee" scope="prototype">
        <property name="position" ref="cook"/>
    </bean>
    <bean id="administratorWorker" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Employee" scope="prototype">
        <property name="position" ref="administrator"/>
    </bean>
    <bean id="waiterWorker" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Employee" scope="prototype">
        <property name="position" ref="waiter"/>
    </bean>
    <bean id="superWaiterWorker" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Employee" scope="prototype">
        <property name="position" ref="superWaiter"/>
    </bean>
    <bean id="founder" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Position">
        <constructor-arg type="String" name="name" index="0" value="Founder"/>
        <constructor-arg name="salary">
            <bean class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Salary">
                <property name="name" value="dividend"/>
                <property name="salary" value="#{salaryService.getBaseSalary() * 123}"/>
            </bean>
        </constructor-arg>
    </bean>
    <bean id="cook" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Position">
        <constructor-arg value="Cook"/>
        <constructor-arg ref="cookSalary"/>
    </bean>
    <bean id="administrator" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Position">
        <constructor-arg value="Administrator"/>
        <constructor-arg ref="administratorSalary"/>
    </bean>
    <bean id="waiter" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Position">
        <constructor-arg value="Waiter"/>
        <constructor-arg ref="waiterSalary"/>
    </bean>
    <bean id="superWaiter" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Position">
        <constructor-arg value="Super waiter"/>
        <constructor-arg ref="superWaiterSalary"/>
    </bean>
    <bean id="cookSalary" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Salary">
        <property name="name" value="Cook"/>
        <property name="salary" value="#{T (java.lang.Math).random() * 100000}"/>
    </bean>
    <bean id="administratorSalary" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Salary">
        <property name="name" value="Administrator"/>
        <property name="salary" value="#{salaryService.getBaseSalary() * 3.2}"/>
    </bean>
    <bean id="waiterSalary" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Salary">
        <property name="name" value="Waiter"/>
        <property name="salary" value="#{salaryService.getBaseSalary() * 1.2}"/>
    </bean>
    <bean id="superWaiterSalary" class="com.epam.eremenko.first_part.taskOne_onlyXmlConfig.entity.Salary">
        <property name="name" value="Super waiter"/>
        <property name="salary" value="#{salaryService.getBaseSalary() * 2.2}"/>
    </bean>
</beans>
